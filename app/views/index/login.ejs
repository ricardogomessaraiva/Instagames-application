<!DOCTYPE HTML>
<html lang="pt-br">

<head>
	<meta charset="UTF-8">

	<title>Instagames</title>

	<!-- JQuery -->
	<script src="http://code.jquery.com/jquery-3.1.1.min.js"></script>

	<!-- bootstrap - link cdn -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">

	<!-- incluindo css -->
	<link href="css/style.css" rel="stylesheet">

</head>

<body>

	<div class="container home">
		<div class="row">
			

			<div class="col-md-6">
				<br><br><br><br><br><br><br><br><br><br>
				<img src="images/logo_games.png" class="img-responsive img-center" />
			</div>

			<div class="col-md-4 painel-login">
				<div class="panel panel-default">
					<div class="panel-body">
						<div class="row">
							<div class="col-md-12">

								<img src="images/controller.jpeg" class="img-responsive img-center" />
								<br />

								<form action="/" method="POST">
									<div class="form-group">
										<input type="text" name="username" id="username" class="form-control" placeholder="Nome de usuÃ¡rio">
									</div>

									<div class="form-group">
										<input type="password" name="password" id="password" class="form-control" placeholder="Senha">
									</div>

									<div class="form-group">
										<button class="btn btn-primary btn-login">Entrar</button>
									</div>
									<% if(errors.length > 0) {%>
										<% for(var i in errors) {%>
										<div class="alert alert-danger" role="alert"><strong>Ops! </strong><%= errors[i].msg %></div>																				
										<% } } %>
									
								</form>
							</div>
						</div>
					</div>
					<div class="form-group">
						<div class="row">
							<div class="col-sm-6 col-sm-offset-3">
								<div class="text-center">
									<a href="/account">Cadastrar</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="col-md-2"></div>
		</div>
	</div>

</body>

</html>